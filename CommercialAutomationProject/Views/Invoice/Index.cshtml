@using CommercialAutomationProject.Models.Entities
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InvoiceId  </td>
            <td>@item.invoiceSerial</td>
            <td>@item.InvoiceNumber</td>
            <td>@item.TaxAdministration</td>
            <td>@item.Date</td>
            <td>@item.Time</td>
            <td>100</td>
            <td>@item.Deliverer</td>
            <td>@item.Recipient</td>
            <td>
                <a href="/Department/Update/@item.InvoiceId" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Invoice/InvoiceDetail/@item.InvoiceId" class="btn btn-success">Detay</a>
            </td>
        </tr>
    }


</table>
<a href="/Invoice/Add" class="btn btn-primary">Fatura Ekle</a>

