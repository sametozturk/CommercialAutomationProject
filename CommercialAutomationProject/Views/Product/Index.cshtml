@using CommercialAutomationProject.Models.Entities
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Urun Adı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.Brand</td>
            <td>@item.Stock</td>
            <td>@item.Purchaseprice</td>
            <td>@item.SalePrice</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.ProductImage</td>
            <td>
                <a href="/Product/Delete/@item.ProductId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Product/Update/@item.ProductId" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }


</table>
<a href="/Product/Add" class="btn btn-primary">Ürün Ekle</a>

