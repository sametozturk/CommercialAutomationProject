@model CommercialAutomationProject.Models.Entities.Employee
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelle</h2>
<br />
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.EmployeeId)
    <div class="form-group col-md-offset-10">
        @Html.LabelFor(x => x.EmployeeName)
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-offset-10">
        @Html.LabelFor(x => x.EmployeeSurname)
        @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-offset-10">
        @Html.LabelFor(x => x.EmployeeImage)
        @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-offset-10">
        @Html.LabelFor(x => x.Department)
        @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.department,new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Güncelle</button>
}



