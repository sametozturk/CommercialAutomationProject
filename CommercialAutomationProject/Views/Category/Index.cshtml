@using CommercialAutomationProject.Models.Entities
@model List<Category>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId  </td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Category/Guncelle/@item.CategoryId" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }


</table>
<a href="/Category/Add" class="btn btn-primary">Kategori Ekle</a>