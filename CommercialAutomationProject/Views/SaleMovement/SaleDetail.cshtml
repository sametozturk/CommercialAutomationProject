@using CommercialAutomationProject.Models.Entities
@model List<SaleMovement>
@{
    ViewBag.Title = "SaleDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Detayı</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır  </th>
    </tr>
    <tr>
        @foreach (var item in Model)
        {
            <td>@item.SaleId</td>
            <td>@item.Product.ProductName</td>
            <td>@item.CurrentAccount.CurrentName  @item.CurrentAccount.CurrentSurname</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
            <td>@item.Price</td>
            <td>@item.TotalAmount</td>
            <td>@item.Date</td>
        }

    </tr>
</table>
<button class="btn btn-default" style="background-color:dodgerblue">Yazdır></button>

