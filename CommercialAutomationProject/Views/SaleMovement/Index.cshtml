@using CommercialAutomationProject.Models.Entities
@model List<SaleMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
    </thead>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SaleId  </td>
            <td>@item.Product.ProductName</td>
            <td>@item.CurrentAccount.CurrentName @item.CurrentAccount.CurrentSurname</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
            <td>@item.Number</td>
            <td>@item.Price</td>
            <td>@item.TotalAmount</td>
            <td>@item.Date</td>
            <td>
                <a href="/SaleMovement/Update/@item.SaleId" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/SaleMovement/SaleDetail/@item.SaleId" class="btn btn-success">Detay</a>
            </td>
        </tr>
    }


</table>
<a href="/SaleMovement/Add" class="btn btn-primary">Yeni Satış</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>



